@page
@model WarehouseManagementController.Pages.ProductManagement.ImportRequestModel
@{
    ViewData["Title"] = "Tạo đơn nhập vào kho";
}

<div class="main-content user-details flex flex-col flex-grow p-4">
    <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
        Nhập sản phẩm vào kho
    </h4>

    <div class="w-full overflow-x-auto">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-4">
                    <label asp-for="ImportRequest.Description" class="block text-gray-700 font-semibold mb-2">Chi tiết đơn nhập</label>
                    <textarea asp-for="ImportRequest.Description" type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Nhập mô tả"></textarea>
                    <span asp-validation-for="ImportRequest.Description" class="text-danger"></span>
                </div>
                
                <h4 class="mb-1 text-l font-semibold text-gray-600 dark:text-gray-300">
                    Danh sách sản phẩm
                </h4>
                <div class="w-full overflow-hidden rounded-lg shadow-xs">
                    <div class="flex justify-end space-x-2 mb-4">
                        <button asp-page-handler="CreateProduct" class="px-4 py-2 font-semibold leading-tight text-white bg-blue-600 rounded-full hover:bg-blue-700">
                            Thêm sản phẩm
                        </button>
                    </div>
                </div>
                <div class="w-full overflow-x-auto">
                    <table class="w-full whitespace-no-wrap">
                        <thead>
                            <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                <th class="px-4 py-3">Tên sản phẩm</th>
                                <th class="px-4 py-3">Nhà sản xuất</th>
                                <th class="px-4 py-3">Giá bán</th>
                                <th class="px-4 py-3">Giá nhập</th>
                                <th class="px-4 py-3">Danh mục</th>
                                <th class="px-4 py-3">Tình trạng</th>
                                <th class="px-4 py-3">Action</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                            @foreach (var item in Model.Products)
                            {
                                <tr class="text-gray-700 dark:text-gray-400">
                                    <td class="px-4 py-3 text-sm">@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="px-4 py-3 text-sm">@Html.DisplayFor(modelItem => item.Manufactor)</td>
                                    <td class="px-4 py-3 text-sm">@string.Format("{0:N0} VND", item.SellingPrice)</td>
                                    <td class="px-4 py-3 text-sm">@string.Format("{0:N0} VND", item.ImportPrice)</td>
                                    <td class="px-4 py-3 text-sm">@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                    <td class="px-4 py-3 text-sm">@Html.DisplayFor(modelItem => item.StatusName)</td>
                                    <td class="px-4 py-3">
                                        <div class="flex items-center space-x-4 text-sm">
                                            <a asp-page="./UpdateProduct" asp-route-id="@item.Id"
                                               class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-black-600
                                                                     rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray btn btn-sm btn-warning">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                                                    <path d="M11 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-7" />
                                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <div class="flex justify-end space-x-2 mb-4">
                        <a asp-page="SearchProduct" class="px-4 py-2 font-semibold leading-tight text-white bg-red-600 rounded-full hover:bg-red-700">
                            Quay lại
                        </a>
                        <button type="submit" asp-page-handler="ImportProducts" class="px-4 py-2 font-semibold leading-tight text-white bg-blue-600 rounded-full hover:bg-blue-700">
                            Nhập sản phẩm vào kho
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}